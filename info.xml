<?xml version="1.0"?>
<extension key="de.systopia.segmentation" type="module">
  <file>segmentation</file>
  <name>Campaign Segmentation</name>
  <description>Allows you assign contacts to campaigns in different segments</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>SYSTOPIA</author>
    <email>endres@systopia.de</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/systopia/de.systopia.segmentation</url>
    <url desc="Documentation">https://github.com/systopia/de.systopia.segmentation</url>
    <url desc="Support">https://github.com/systopia/de.systopia.segmentation/issues</url>
    <url desc="Licensing">https://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2024-03-13</releaseDate>
  <version>1.1-beta4</version>
  <develStage>beta</develStage>
  <compatibility>
    <ver>5.38</ver>
  </compatibility>
  <comments/>
  <civix>
    <namespace>CRM/Segmentation</namespace>
    <format>23.02.1</format>
  </civix>
  <mixins>
    <mixin>menu-xml@1.0.0</mixin>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>smarty-v2@1.0.1</mixin>
  </mixins>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <upgrader>CRM_Segmentation_Upgrader</upgrader>
</extension>
